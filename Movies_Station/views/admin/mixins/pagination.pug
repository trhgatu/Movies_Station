mixin pagination(pagination)
    ul.pagination.pg-primary(style='align-self: center')
                        if(pagination.currentPage > 1)
                            li.page-item
                                button.page-link(href='#' aria-label='Previous' button-pagination=pagination.currentPage-1)
                                    span(aria-hidden='true') &laquo;
                                    span.sr-only Previous
                        - for (var i = 1; i <= pagination.totalPage;i++)
                            li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                                button(
                                    class="page-link"
                                    button-pagination=i
                                ) #{i}

                        if(pagination.currentPage < pagination.totalPage)
                            li.page-item
                                button.page-link(href='#' aria-label='Next' button-pagination=pagination.currentPage + 1)
                                    span(aria-hidden='true') &raquo;
                                    span.sr-only Next